import discord
import feedparser
import asyncio

TOKEN = "MTQyOTQxODc0MzQ5NDM0ODg5MA.G1laO7.pxB1lzxms3o6k5RYeCX3oP8vew2HRPRKPaPc_8
"  # replace with your bot token
CHANNEL_ID = 123456789012345678  # replace with your channel ID

# AO3 feed for My Hero Academia
AO3_FEED = "https://archiveofourown.org/tags/My%20Hero%20Academia%20%7C%20Boku%20no%20Hero%20Academia/works.atom"

intents = discord.Intents.default()
intents.message_content = True

client = discord.Client(intents=intents)

last_posted = None  # To track last fic

async def check_ao3_updates():
    global last_posted
    await client.wait_until_ready()
    channel = client.get_channel(CHANNEL_ID)

    while not client.is_closed():
        feed = feedparser.parse(AO3_FEED)
        latest = feed.entries[0]

        if last_posted != latest.id:
            last_posted = latest.id
            title = latest.title
            author = latest.author
            link = latest.link

            embed = discord.Embed(
                title=title,
                url=link,
                description=f"ðŸ‘¤ by **{author}**",
                color=discord.Color.purple()
            )
            await channel.send("ðŸ“š **New My Hero Academia fic posted on AO3!**", embed=embed)

        await asyncio.sleep(900)  # Check every 15 minutes

@client.event
async def on_ready():
    print(f"âœ… Logged in as {client.user}")

client.loop.create_task(check_ao3_updates())
client.run(TOKEN)
